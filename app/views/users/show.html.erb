<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image %>
  <table class="table">
    <tbody>
    <tr></tr>
    <tr>
    <th>name</th>
	  <th><%= @user.name %></th>
  	</tr>
  	<tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
    </tr>
  </tbody>
	</table>
    <div>
    <%= link_to edit_user_path,class: "btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
    <% end %>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, url: '/books', method: :post do  |f| %>
     <div><%= f.label :title %></div>
     <div><%= f.text_field :title %></div>
    <br>
      <div><%= f.label :Opinion %></div>
      <div><%= f.text_area :Opinion %></div>

    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
   <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
   </tbody>
   </table>
     </div>
  </div>
 </div>
</main>