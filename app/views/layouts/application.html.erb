<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <script src="https://kit.fontawesome.com/b19cc7d22f.js" crossorigin="anonymous"></script>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <a class="navbar-brand" href="/">
      <span>Bookers</span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
             <% if user_signed_in? %>

   <li> <a href="/"><i class="fa-solid fa-house-chimney"> Home</i></a></li>
   <li><i class="fa-solid fa-users">Users</i></li>
   <li><i class="fa-solid fa-book-open">Books</i></li>
   <li><i class="fa-solid fa-right-from-bracket"></i></li>
    <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    <% else %>
   <li><a class="nav-link text-light" href="/"><i class="fa-solid fa-house-chimney"> Home</i></a></li>
   <li><a class="nav-link text-light" href="/home/about"><i class="fa-solid fa-link">About</i></a></li>
   <li>
    <a class="nav-link text-light"><%= link_to "sign ",new_user_registration_path %>sign_up><i class="fa-solid fa-user-plus"></i>Sign up
    </a>
   </li>
   <li>
      <a class="nav-link text-light" <%= link_to "Log in", new_user_session_path %><i class="fa-solid fa-right-to-bracket"></i></a>
    </li>
    <% end %>

      </ul>
      </div>
  </nav>

    </header>
    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    		</div>
    </footer>

  </body>
</html>
