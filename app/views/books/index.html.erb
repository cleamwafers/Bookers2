<main>
  <div class="container">
    <div class="row">

      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <div><%= f.label :title %></div>
          <div><%= f.text_field :title %></div>
          <br>

          <div><%= f.label :Opinion %></div>
          <div><%= f.text_area :body %></div>

          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
               <th>Title</th>
                <th>Opinion</th>
            </tr>
          </thead>
           <tbody>
             <% @books.each do |book| %>
            <tr>
              <th><%= image_tag @user.get_profile_image(100,100)  %></th>
              <th><%= link_to book.title, book_path(book.id) %></th>
              <th> <%= book.body %></th>
              <th>
              </th>
            </tr>
            <% end %>
        </tbody>
        </table>

      </div>
    </div>
  </div>
</main>


