<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <% if @book.errors.any? %>
       <%= @book.errors.count %>件のエラーが発生しました
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

      <%= render 'book', user: @user,book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th><%= image_tag @user.get_profile_image(100,100)  %></th>
              <th><%= link_to book.title, book_path(book.id) %></th>
              <th> <%= book.body %></th>
              <th>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>



