<h2>Book detail</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th><% if @book.profile_image.attached? %></th>
      <th>Title</th>
      <th>Opinion</th>
      <th><%= link_to "編集", edit_book_path(@book.id) %></th>
      <th> <% if @book.user == current_user %><%= link_to "削除", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %>
      </th>
    </tr>
  </thead>
</table>

