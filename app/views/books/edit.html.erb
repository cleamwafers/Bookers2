<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @book.errors.any? %>
       <%= @book.errors.count %>件のエラーが発生しました
       <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
       </ul>
      <% end %>

      <h1>Editing Book</h1>
      <div><%= f.label :Title %></div>
      <%= f.text_field :book.title %>
     <div><%= f.label :Opinion %></div>
      <div><%= f.text_area :book.body %></div>
      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
      <%= link_to "show",books_path(@book.id) %>
      |
      <%= link_to "Back",books_path %>
    </div>
  </div>
</div>