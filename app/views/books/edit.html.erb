<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @book.errors.any? %>
       <%= @book.errors.count %>件のエラーが発生しました
       <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
       </ul>
      <% end %>

      <h1>Editing Book</h1>
      <%= form_with model: @book  do  |f| %>
      <label for="inputTitle">Title</label><br>
      <%= f.text_field :title, autofocus: true, id:"book.name", placeholder:"name"%><br>
      <label for="inputBody">Opinion</label><br>
      <%= f.text_area :body, autofocus: true, id:"inputBody",placeholder:"body"%><br>

      <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      <%= link_to "Show",book_path(@book.id) %>
      |
      <%= link_to "Back",books_path %>
    </div>
  </div>
</div>